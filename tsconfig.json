{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "rootDir": "src",
    "outDir": "build"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/__tests__",
    "node_modules",
    "**/*.tmp.ts"
  ]
}
