{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "rootDir": "src",
    "outDir": "build"
  },
  "include": [
    "src/*.ts",
    "src/Request.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__",
    "src/**/__fixtures__",
    "src/**/__mocks__"
  ]
}
